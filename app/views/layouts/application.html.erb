<!DOCTYPE html>
<html>
  <head>
    <title>Motorista</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <nav class="navbar navbar-expand-md navbar-light bg-light my-0 py-0">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"><%= image_tag "logo.png" %></a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'HOME', articles_url, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">CARS</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">MOTORCYCLES</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">OFF ROAD</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">RACING</a>
          </li>
          <li class="nav-item d-flex d-md-none align-items-center flex-nowrap">
            <%= user_buttons_nav_small(session[:current_user_id])%>
          </li>
        </ul>

        <%= user_buttons(session[:current_user_id])%>
      </div>
    </nav>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>

  <body>
    <%= yield %>
  </body>
</html>
