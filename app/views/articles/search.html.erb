<h1 class = new_article_title>Search for an article</h1>

<%= form_for(:article, url: search_path, html: {class: 'form'}) do |f| %>

  <%= f.label :title, 'Article to look for' %>
  <%= f.text_field :title %>

  <div class="proceed_button">
    <%= button_tag(type: 'submit', class: "proceed", id: 'validForm') do%>
      <span>Search</span>
    <% end %>
  </div>
  

<%end%>

<% if @articles %>

  <%= render 'articles_to_show', :locals => {articles: @articles}%>
    </div>
  </div>
<% end %>