<%= form_for(@article, html: {multipart: true}) do |f| %>

  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  
  <p>
    <%= f.label :image, "Select the posts image" %><br />
    <%= f.file_field :image %>
  </p>

  <%= f.label :categories %><br />
  <p>
    <%= f.check_box :article_categories, {multiple: true}, 'Cars', '' %> Cars
  </p>
  <p>
    <%= f.check_box :article_categories, {multiple: true}, 'Bikes', '' %> Bikes
  </p>
  <p>
    <%= f.check_box :article_categories, {multiple: true}, 'Off Road', '' %> Off Road
  </p>
  <p>
    <%= f.check_box :article_categories, {multiple: true}, 'Racing', '' %> Racing
  </p>

  <p>
    <%= f.submit %>
  </>
<% end %>
