<h1 class = new_article_title>Sign in</h1>

<%= form_for(:user, url: sign_in_path, html: {class: 'form'}) do |f| %>

  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>

  <div class="actions button_wrapper d-flex justify-content-center w-100">
    <%= f.submit 'Sign in', class: 'form_submit' %>
  </div>
  

<%end%>